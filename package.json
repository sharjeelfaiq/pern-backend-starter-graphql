{
  "name": "pern-backend-starter",
  "version": "1.0.0",
  "type": "module",
  "license": "ISC",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "lint:js": "eslint \"./**/*.{js,jsx}\"",
    "format:code": "prettier --write \"./**/*.{js,jsx,html,yaml,env,md,json,txt}\"",
    "format:prisma": "npx prisma format",
    "db:init": "npx prisma init --schema=src/prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev --schema=src/prisma/schema.prisma",
    "db:generate": "npx prisma generate --schema=src/prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=src/prisma/schema.prisma",
    "db:reset": "npx prisma migrate reset --schema=src/prisma/schema.prisma"
  },
  "devDependencies": {
    "eslint": "^9.20.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.0",
    "prisma": "^6.19.0"
  },
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@as-integrations/express4": "^1.1.2",
    "@graphql-tools/merge": "^9.1.3",
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "colors": "^1.4.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "graphql": "^16.12.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.7",
    "winston": "^3.17.0"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#constants/*": "./src/constants/*",
    "#graphql/*": "./src/graphql/*",
    "#middleware/*": "./src/middleware/*",
    "#modules/*": "./src/modules/*",
    "#repository/*": "./src/repository/*",
    "#utils/*": "./src/utils/*"
  }
}
